<div class="field">
  <%= f.label :bid_type, 'Type', class: 'text-field-label' %>
  <%= f.select :bid_type, Rfp.bid_types.keys.map { |w| [w.humanize, w] }, {}, disabled: true, class: 'select' %>
</div>

<div class="field">
  <%= f.label :start_year, 'Year', class: 'text-field-label' %>
  <%= f.select :start_year, (Date.today.year..Date.today.year+5).map { |year| ["#{year} - #{year+1}", year] }, {}, class: 'select' %>
</div>
<p class='buyers__section-caption'>
  Please email
  <%= mail_to 'farmtocafeteria@caff.org' %>
  to create other RFP types.
</p>

<div class='buyers__actions'>
  <div class='buyers__action'>
    <%= f.submit 'Next', class: 'button-primary' %>
  </div>
  <div class='buyers__action'>
    <%= f.submit 'Save and exit', class: 'button-secondary' %>
  </div>
</div>
