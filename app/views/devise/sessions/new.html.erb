<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {data: {turbo: false}}) do |f| %>
  <div class="mb-6">
    <%= f.label :email %>
    <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email" %>
    <% if f.object.errors.full_messages_for(:email).present? %>
      <p class="text-sm text-red-800"><%= f.object.errors.full_messages_for(:email).first %></p>
    <% end %>
  </div>

  <div class="mb-6">
    <%= f.label :password %>
    <%= f.password_field :password, required: true, autocomplete: "current-password" %>
    <% if f.object.errors.full_messages_for(:password).present? %>
      <p class="text-sm text-red-800"><%= f.object.errors.full_messages_for(:password).first %></p>
    <% end %>
  </div>

  <div class="mb-6 flex items-center justify-between">
    <div class="flex items-center">
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
    <% end %>
    </div>

    <div class="text-sm">
    <% if devise_mapping.recoverable? %>
      <%= link_to t(".forgot_password"), new_password_path(resource_name) %>
    <% end %>
    </div>
  </div>

  <div>
    <%= f.submit t(".submit") %>
  </div>
<% end %>
