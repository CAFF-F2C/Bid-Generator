<div class="divide-y divide-gray-200">
  <div class="space-y-8">
    <%= render(Buyers::Steps::Component.new(title: DistrictProfile.model_name.human)) do |component| %>
      <%= component.step index: 1, current_index: 4, section: t(:district_information, scope: [:activerecord, :attributes, :district_profile]), path: edit_buyers_district_profile_path, valid: @location.district_profile.valid?(:district_information) %>
      <%= component.step index: 2, current_index: 4, section: t(:rfp_contact, scope: [:activerecord, :attributes, :district_profile]), path: edit_buyers_district_profile_contact_path, valid: @location.district_profile.valid?(:rfp_contact) %>
      <%= component.step index: 3, current_index: 4, section: t(:procurement_terms, scope: [:activerecord, :attributes, :district_profile]), path: edit_buyers_district_profile_procurement_path, valid: @location.district_profile.valid?(:procurement_terms) %>
      <%= component.step index: 4, current_index: 4, section: t(:locations, scope: [:activerecord, :attributes, :district_profile]), path: buyers_district_profile_locations_path, valid: @location.district_profile.valid?(:locations) %>
    <% end %>

    <div>
      <h2 class="text-lg leading-6 font-medium text-gray-900"><%= t('.title') %></h2>
    </div>
  </div>

  <div class="pt-4 mt-4">
    <%= render partial: 'form', locals: {location: @location} %>
    <div class="pt-4 mt-4">
      <%= link_to t('.cancel'), buyers_district_profile_locations_path, class: 'forms-submit--outline' %>
    </div>
  </div>
</div>
